// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @unique
  email          String?   @unique
  name           String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  role           user_role @default(user)
  avatar         String?
  assignedIssues Issues[]  @relation("AssignedUser")
  createdIssues  Issues[]  @relation("CreatedUser")
  Project        Project?  @relation("UserAdminOfProject")
  projects       Project[] @relation("ProjectMember")
}

model Project {
  id          String   @id @unique @default(uuid())
  title       String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  projectType project_type
  admin       User         @relation("UserAdminOfProject", fields: [adminId], references: [id])
  adminId     String       @unique
  teamMembers User[]       @relation("ProjectMember")
  issues      Issues[]
}

model Issues {
  id                String        @id @unique @default(uuid())
  title             String
  description       String
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  project           Project       @relation(fields: [projectId], references: [id])
  projectId         String
  assignedTo        User?         @relation("AssignedUser", fields: [assignedToId], references: [id])
  assignedToId      String?
  createdBy         User          @relation("CreatedUser", fields: [createdById], references: [id])
  createdById       String
  type              issue_type
  status            issue_status
  labels            issue_labels?
  priority          Int?
  story_points      Int?
  original_estimate Int?
  time_completed    Int?
  due_date          DateTime
}

enum user_role {
  user
  admin
}

enum project_type {
  software
}

enum issue_type {
  BUG
  STORY
  TASK
  SUBTASK
}

enum issue_status {
  NEW
  ACTIVE
  RESOLVED
  CLOSED
}

enum issue_labels {
  Design
  Development
  DevOps
  FrontEnd
  Backend
}
