// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum user_role {
  user
  admin
}

model User {
  id      String    @id @unique @default(cuid())
  email   String?
  Project Project[]
  Issues  Issues[]
  role    user_role @default(user)
  avatar  String?
}

enum project_type {
  software
}

model Project {
  id          String       @id @unique @default(cuid())
  title       String?
  admin       User?        @relation(fields: [userId], references: [id])
  totalIssues Int?
  all_issues  Issues[]
  userId      String?
  projectType project_type @default(software)
  picture     String?
}

enum issue_type {
  BUG
  STORY
  TASK
  SUBTASK
}

enum issue_status {
  NEW
  ACTIVE
  RESOLVED
  CLOSED
}

enum issue_labels {
  Design
  Development
  DevOps
  FrontEnd
  Backend
}

model Issues {
  id         String    @id @unique @default(cuid())
  project_id Project   @relation(fields: [projectId], references: [id])
  created_at DateTime? @default(now())
  created_by User?     @relation(fields: [userId], references: [id])
  updated_at DateTime? @updatedAt

  projectId String
  userId    String?
  type      issue_type    @default(BUG)
  status    issue_status  @default(NEW)
  labels    issue_labels?
}
